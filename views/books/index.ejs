<h2 class='page-header'>查找书籍</h2>
<form action="/books" method='GET'>
    <div class='form-row'>
        <div class="form-item">
            <label>书名</label>
            <input type="text" name='title' value='<%= searchBooks.title %>' />
        </div>
    </div>
    <div class='form-row'>
        <div class="form-item">
            <label>发布日期(几号之后)</label>
            <input type="date" name='publishedAfter' value='<%= searchBooks.publishedAfter %>' />
        </div>
        <div class="form-item">
            <label>发布日期(几号之前)</label>
            <input type="date" name='publishedBefore' value='<%= searchBooks.publishedBefore %>' />
        </div>
    </div>
    <div class='form-row form-row-end'>
        <button class='btn btn-primary' type='submit'>查找</button>
    </div>
</form>
<br>
<%- include('../partials/bookGrid', { books : books, large:true}) %>