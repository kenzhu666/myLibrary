<h2 class='page-header'><%= book.title %></h2>

<div class="book-details">
    <div>
        <img width='100' height='150' src="<%= book.coverImagePath %>">
        <div class="book-details-btn-grid">
            <a class='btn btn-primary' href="/books/<%= book.id %>/edit">更改</a>
            <%- include('../partials/deleteForm', {url:`/books/${book.id}`}) %>
            <a class='btn btn-primary book-details-author-button' href="/authors/<%= book.author.id %>">查看作者</a>
        </div>
    </div>
    <div class="book-details-grid">
        <div class='book-details-label'>作者: </div>
        <div> <%= book.author.name %></div>
        <div class='book-details-label'>出版日期: </div>
        <div><%= book.publishDate.toDateString() %></div>
        <div class='book-details-label'>页数: </div>
        <div><%= book.pageCount %></div>
        <div class='book-details-label'>简介: </div>
        <div><%= book.description %></div>
    </div>



</div>